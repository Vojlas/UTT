             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniversalTimerTool.View.UserControlls"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="70">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="CheckBoxStatus" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="TextBlockName" Grid.Column="1" Text="xxx xxx xx" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
