<UserControl x:Class="UniversalTimerTool.UserControlls.PlaceHolderTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniversalTimerTool.UserControlls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
            BorderThickness="1"
            VerticalAlignment="Center"
            CornerRadius= "{Binding CornerRadius}">

            <StackPanel x:Name="StackPanel" Margin="5" Orientation="Horizontal" MouseLeftButtonDown="StackPanel_MouseLeftButtonDown">

                <Image x:Name="Image"  Source="{Binding source}" Height="18"/>
                <TextBox x:Name="TXBmail" Text="{Binding PlaceHolder}" Foreground="Gray" Margin="3 0 0 0" Padding="-3 -3 -3 -3" BorderThickness="0" GotFocus="TXBmail_GotFocus" LostFocus="TXBmail_LostFocus"/>

            </StackPanel>


        </Border>
    </Grid>
</UserControl>
